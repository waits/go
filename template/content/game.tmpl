{{define "title"}}{{if eq .Last "f"}}Game Over - {{end}}{{.Black}} vs. {{.White}} - Go{{end}}
{{define "content"}}
<h1 id="title">Turn <span id="turn">{{.Turn}}{{if eq .Last "f"}}/F{{end}}</span> â€“ {{.Black}} vs. {{.White}}</h1>

{{if ne .Last "f"}}
  <p>
    <form>
      <strong>Player</strong>
      <label><input type="radio" id="color_1" name="color" value="1" /> {{.Black}} (black)</label>
      <label><input type="radio" id="color_2" name="color" value="2" /> {{.White}} (white)</label>
    </form>
  </p>
{{end}}

<p><strong>Captured:</strong> black <span id="blackscr">{{.BlackScr}}</span>, white <span id="whitescr">{{.WhiteScr}}</span></p>
{{if ne .Last "f"}}<p><button id="pass">Pass</button></p>{{end}}

<table id="board" class="{{if eq .Last "f"}}final{{else}}disabled{{end}}">
  {{range .Board}}
  <tr height="30px">
    {{range .}}
    <td width="30px" class="cell">
      {{if eq . 1}}<div class="piece black"></div>{{else if eq . 2}}<div class="piece white"></div>{{end}}
    </td>
    {{end}}
  </tr>
  {{end}}
</table>
{{end}}
{{define "script"}}
{{if ne .Last "f"}}
  <script>
    'use strict';
    var board = document.getElementById('board');
    var passBtn = document.getElementById('pass');
    board && new GameController(board, passBtn, {{.Black}}, {{.White}});
  </script>
{{end}}
{{end}}
