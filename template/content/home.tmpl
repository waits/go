{{define "title"}}Play Go{{end}}
{{define "content"}}
<h1>Play Go</h1>

<form method="post" action="/game">
  <strong>New Game</strong>
  <p>
    <label>Color</label>
    <label><input type="radio" name="color" value="black" /> Black</label>
    <label><input type="radio" name="color" value="white" /> White</label>
  </p>
  <p>
    <label>You</label>
    <input name="player_1" placeholder="e.g. Alice" />
  </p>
  <p>
    <label>Opponent</label>
    <input name="player_2" placeholder="e.g. Bob" />
  </p>
  <p>
    <label>Board size</label>
    <select name="size">
      <option value="9">9x9 "quick"</option>
      <option value="11">11x11</option>
      <option value="13" selected>13x13 "beginner"</option>
      <option value="15">15x15</option>
      <option value="17">17x17</option>
      <option value="19">19x19 "standard"</option>
    </select>
  </p>
  <button type="submit">Start Game</button>
</form>

<hr>
<footer>
  <a href="/about">About</a>
</footer>
{{end}}
