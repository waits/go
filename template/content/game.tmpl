{{define "title"}}{{.Black}} vs. {{.White}} - Go{{end}}
{{define "content"}}
<h1>Turn <span id="turn">{{.Turn}}</span> â€“ {{.Black}} vs. {{.White}}</h1>
<small>Captured: black <span id="blackscr">{{.BlackScr}}</span>, white <span id="whitescr">{{.WhiteScr}}</span></small>

<p>
  <form>
    <label>Player</label>
    <label><input type="radio" id="color_black" name="color" value="black" /> {{.Black}} (black)</label>
    <label><input type="radio" id="color_white" name="color" value="white" /> {{.White}} (white)</label>
  </form>
</p>

<table id="board">
  {{range .Board}}
  <tr height="30px">
    {{range .}}
    <td width="30px" class="cell">
      {{if eq . 1}}<div class="piece black"></div>{{else if eq . 2}}<div class="piece white"></div>{{end}}
    </td>
    {{end}}
  </tr>
  {{end}}
</table>
{{end}}
{{define "script"}}
<script>
  'use strict';
  var board = document.getElementById('board');
  board && new GameController(board, {{.Black}}, {{.White}});
</script>
{{end}}
